

<h1>Listing crime_reports</h1>
<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Body</th>
      <th>Address</th>
      <th>Latitude</th>
      <th>Longitude</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @crime_reports.each do |crime_report| %>
      <tr>
        <td><%= crime_report.user %></td>
        <td><%= crime_report.body %></td>
        <td><%= crime_report.address %></td>
        <td><%= crime_report.latitude %></td>
        <td><%= crime_report.longitude %></td>
        <td><%= link_to 'Show', crime_report %></td>
        <td><%= link_to 'Edit', edit_crime_report_path(crime_report) %></td>
        <td><%= link_to 'Destroy', crime_report, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

